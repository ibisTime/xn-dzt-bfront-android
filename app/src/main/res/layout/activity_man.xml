<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:background="@color/white"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:background="@color/blue"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="38dp">

                    <TextView
                        android:id="@+id/txt_name"
                        android:textSize="18sp"
                        android:textColor="@color/white"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <View
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:background="@color/white"
                        android:layout_width="1dp"
                        android:layout_height="18dp"/>

                    <TextView
                        android:id="@+id/txt_phone"
                        android:textSize="18sp"
                        android:textColor="@color/white"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="22dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="18dp"
                        android:layout_marginLeft="34dp"
                        android:text="客户信息"
                        android:textColor="@color/blue"
                        android:textSize="14sp" />

                    <View style="@style/style_split_line_mg18"/>

                    <LinearLayout
                        android:layout_marginTop="15dp"
                        android:layout_marginLeft="48dp"
                        android:layout_marginRight="48dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:text="客户姓名"
                            android:textSize="12sp"
                            android:textColor="@color/blue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:id="@+id/txt_man_name"
                            android:layout_marginLeft="@dimen/sp_16"
                            android:textSize="12sp"
                            android:textColor="@color/gray_333333"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginTop="@dimen/dp_20"
                        android:layout_marginLeft="48dp"
                        android:layout_marginRight="48dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:text="联系电话"
                            android:textSize="12sp"
                            android:textColor="@color/blue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:id="@+id/txt_man_phone"
                            android:layout_marginLeft="@dimen/sp_16"
                            android:textSize="12sp"
                            android:textColor="@color/gray_333333"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginTop="@dimen/dp_20"
                        android:layout_marginLeft="48dp"
                        android:layout_marginRight="48dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:text="收货地址"
                            android:textSize="12sp"
                            android:textColor="@color/blue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:id="@+id/txt_man_address"
                            android:layout_marginLeft="@dimen/sp_16"
                            android:textSize="12sp"
                            android:textColor="@color/gray_333333"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginTop="@dimen/dp_20"
                        android:layout_marginLeft="48dp"
                        android:layout_marginRight="48dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:text="\u3000\u3000身高"
                            android:textSize="12sp"
                            android:textColor="@color/blue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:id="@+id/txt_man_height"
                            android:layout_marginLeft="@dimen/sp_16"
                            android:textSize="12sp"
                            android:textColor="@color/gray_333333"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginTop="@dimen/dp_20"
                        android:layout_marginLeft="48dp"
                        android:layout_marginRight="48dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:text="\u3000\u3000体重"
                            android:textSize="12sp"
                            android:textColor="@color/blue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:id="@+id/txt_man_weight"
                            android:layout_marginLeft="@dimen/sp_16"
                            android:textSize="12sp"
                            android:textColor="@color/gray_333333"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="40dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:text="会员信息"
                        android:textSize="14sp"
                        android:layout_marginLeft="34dp"
                        android:layout_marginBottom="18dp"
                        android:textColor="@color/blue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <View style="@style/style_split_line_mg18"/>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_marginLeft="48dp"
                        android:layout_marginRight="48dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content">

                            <LinearLayout
                                android:layout_marginTop="@dimen/dp_20"
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:text="会员等级"
                                    android:textSize="12sp"
                                    android:textColor="@color/blue"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />

                                <TextView
                                    android:id="@+id/txt_man_level"
                                    android:layout_marginLeft="@dimen/sp_16"
                                    android:textSize="12sp"
                                    android:textColor="@color/gray_333333"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_marginTop="@dimen/dp_20"
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:text="会员天数"
                                    android:textSize="12sp"
                                    android:textColor="@color/blue"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />

                                <TextView
                                    android:id="@+id/txt_man_days"
                                    android:layout_marginLeft="@dimen/sp_16"
                                    android:textSize="12sp"
                                    android:textColor="@color/gray_333333"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_marginTop="@dimen/dp_20"
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:text="会员生日"
                                    android:textSize="12sp"
                                    android:textColor="@color/blue"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />

                                <TextView
                                    android:id="@+id/txt_man_birthday"
                                    android:layout_marginLeft="@dimen/sp_16"
                                    android:textSize="12sp"
                                    android:textColor="@color/gray_333333"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/layout_man_surplus"
                                android:layout_marginTop="@dimen/dp_20"
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:text="剩余积分"
                                    android:textSize="12sp"
                                    android:textColor="@color/blue"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />

                                <TextView
                                    android:id="@+id/txt_man_point_surplus"
                                    android:layout_marginLeft="@dimen/sp_16"
                                    android:textSize="12sp"
                                    android:textColor="@color/gray_333333"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />

                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content">

                            <LinearLayout
                                android:id="@+id/layout_man_exp"
                                android:layout_marginTop="@dimen/dp_20"
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:text="会员成长经验"
                                    android:textSize="12sp"
                                    android:textColor="@color/blue"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />

                                <TextView
                                    android:id="@+id/txt_man_exp"
                                    android:layout_marginLeft="@dimen/sp_16"
                                    android:textSize="12sp"
                                    android:textColor="@color/gray_333333"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content" />

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/layout_man_levelUp"
                                android:layout_marginTop="@dimen/dp_20"
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:text="升级所需经验"
                                    android:textSize="12sp"
                                    android:textColor="@color/blue"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />

                                <TextView
                                    android:id="@+id/txt_man_levelUp"
                                    android:layout_marginLeft="@dimen/sp_16"
                                    android:textSize="12sp"
                                    android:textColor="@color/gray_333333"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/layout_man_total"
                                android:layout_marginTop="@dimen/dp_20"
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:text="\u3000历史总积分"
                                    android:textSize="12sp"
                                    android:textColor="@color/blue"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />

                                <TextView
                                    android:id="@+id/txt_man_point_total"
                                    android:layout_marginLeft="@dimen/sp_16"
                                    android:textSize="12sp"
                                    android:textColor="@color/gray_333333"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/layout_man_consume"
                                android:layout_marginTop="@dimen/dp_20"
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:text="\u3000已消费积分"
                                    android:textSize="12sp"
                                    android:textColor="@color/blue"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />

                                <TextView
                                    android:id="@+id/txt_man_point_consume"
                                    android:layout_marginLeft="@dimen/sp_16"
                                    android:textSize="12sp"
                                    android:textColor="@color/gray_333333"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_measure"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <fragment
                    android:id="@+id/fragment_measure"
                    android:name="com.cdkj.hydz.module.order.OrderMeasureFragment"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    >
                </fragment>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_body"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <fragment
                    android:id="@+id/fragment_body"
                    android:name="com.cdkj.hydz.module.order.OrderBodyFragment"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    >
                </fragment>

            </LinearLayout>

            <Button
                android:id="@+id/btn_confirm"
                android:layout_marginTop="40dp"
                android:layout_marginLeft="18dp"
                android:layout_marginRight="18dp"
                android:layout_marginBottom="12dp"
                android:gravity="center"
                android:background="@drawable/corner_order_blue"
                android:text="确定"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:layout_width="match_parent"
                android:layout_height="44dp" />

        </LinearLayout>

    </ScrollView>

</layout>
