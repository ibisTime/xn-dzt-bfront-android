<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:background="@color/gray_f8f8f8"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_marginTop="15dp"
                android:layout_marginRight="18dp"
                android:layout_marginLeft="18dp"
                android:layout_marginBottom="24dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:gravity="center"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:background="@drawable/corner_message"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="40dp">

                    <EditText
                        android:id="@+id/edt_search"
                        android:background="@null"
                        android:hint="请输入订单编号、客户姓名或手机号"
                        android:textColorHint="@color/gray_b3b3b3"
                        android:textSize="12sp"
                        android:textColor="@color/black"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                </LinearLayout>

                <TextView
                    android:id="@+id/txt_search"
                    android:gravity="center"
                    android:text="搜索"
                    android:textSize="14sp"
                    android:textColor="@color/white"
                    android:background="@drawable/corner_order_blue"
                    android:layout_marginLeft="10dp"
                    android:layout_width="63dp"
                    android:layout_height="40dp" />

            </LinearLayout>

        </LinearLayout>

       <LinearLayout
           android:background="@color/gray_f2f2f2"
           android:layout_marginBottom="24dp"
           android:orientation="horizontal"
           android:layout_width="match_parent"
           android:layout_height="39dp">

           <TextView
               android:id="@+id/txt_all"
               android:gravity="center"
               android:text="全部订单"
               android:textSize="12sp"
               android:textColor="@color/black"
               android:layout_weight="1"
               android:layout_width="0dp"
               android:layout_height="match_parent" />

           <TextView
               android:id="@+id/txt_wait_measure"
               android:gravity="center"
               android:text="待量体"
               android:textSize="12sp"
               android:textColor="@color/gray_b3b3b3"
               android:layout_weight="1"
               android:layout_width="0dp"
               android:layout_height="match_parent" />

           <TextView
               android:id="@+id/txt_wait_pay"
               android:gravity="center"
               android:text="待支付"
               android:textSize="12sp"
               android:textColor="@color/gray_b3b3b3"
               android:layout_weight="1"
               android:layout_width="0dp"
               android:layout_height="match_parent" />

           <TextView
               android:id="@+id/txt_wait_input"
               android:gravity="center"
               android:text="待录入"
               android:textSize="12sp"
               android:textColor="@color/gray_b3b3b3"
               android:layout_weight="1"
               android:layout_width="0dp"
               android:layout_height="match_parent" />

           <TextView
               android:id="@+id/txt_wait_check"
               android:gravity="center"
               android:text="待复核"
               android:textSize="12sp"
               android:textColor="@color/gray_b3b3b3"
               android:layout_weight="1"
               android:layout_width="0dp"
               android:layout_height="match_parent" />

       </LinearLayout>

        <View style="@style/style_split_line_mg18" />

    </LinearLayout>
</layout>