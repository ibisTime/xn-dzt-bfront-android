<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:background="@color/white"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/layout_order"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:background="@color/blue"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="38dp">

                    <TextView
                        android:id="@+id/txt_name"
                        android:textSize="18sp"
                        android:textColor="@color/white"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <View
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:background="@color/white"
                        android:layout_width="1dp"
                        android:layout_height="18dp"/>

                    <TextView
                        android:id="@+id/txt_phone"
                        android:textSize="18sp"
                        android:textColor="@color/white"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:text="订单信息"
                        android:textSize="14sp"
                        android:layout_marginTop="22dp"
                        android:layout_marginLeft="34dp"
                        android:layout_marginBottom="15dp"
                        android:textColor="@color/blue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <View style="@style/style_split_line_mg18"/>

                    <LinearLayout
                        android:layout_marginTop="15dp"
                        android:layout_marginLeft="48dp"
                        android:layout_marginRight="48dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:text="订单编号"
                            android:textSize="12sp"
                            android:textColor="@color/blue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:id="@+id/txt_order_id"
                            android:layout_marginLeft="@dimen/sp_16"
                            android:textSize="12sp"
                            android:textColor="@color/gray_333333"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginTop="@dimen/dp_20"
                        android:layout_marginLeft="48dp"
                        android:layout_marginRight="48dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:text="下单时间"
                            android:textSize="12sp"
                            android:textColor="@color/blue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:id="@+id/txt_order_time"
                            android:layout_marginLeft="@dimen/sp_16"
                            android:textSize="12sp"
                            android:textColor="@color/gray_333333"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginBottom="15dp"
                        android:gravity="center_vertical"
                        android:layout_marginTop="@dimen/dp_20"
                        android:layout_marginLeft="48dp"
                        android:layout_marginRight="48dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:text="订单状态"
                            android:textSize="12sp"
                            android:textColor="@color/blue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:id="@+id/txt_order_status"
                            android:gravity="center"
                            android:background="@drawable/corner_order_blue9"
                            android:layout_marginLeft="@dimen/sp_16"
                            android:textSize="12sp"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:textColor="@color/white"
                            android:layout_width="wrap_content"
                            android:layout_height="18dp" />

                    </LinearLayout>

                    <View style="@style/style_split_line_mg18"/>

                    <LinearLayout
                        android:layout_marginTop="15dp"
                        android:layout_marginLeft="48dp"
                        android:layout_marginRight="48dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:text="下单产品"
                            android:textSize="12sp"
                            android:textColor="@color/blue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:id="@+id/txt_product_name"
                            android:layout_marginLeft="@dimen/sp_16"
                            android:textSize="12sp"
                            android:textColor="@color/gray_333333"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </LinearLayout>



                    <LinearLayout
                        android:layout_marginTop="@dimen/dp_20"
                        android:layout_marginLeft="48dp"
                        android:layout_marginRight="48dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:text="订单价格"
                            android:textSize="12sp"
                            android:textColor="@color/blue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:id="@+id/txt_order_amount"
                            android:layout_marginLeft="@dimen/sp_16"
                            android:textSize="12sp"
                            android:textColor="@color/gray_333333"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginTop="@dimen/dp_20"
                        android:layout_marginLeft="48dp"
                        android:layout_marginRight="48dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:text="价格优惠"
                            android:textSize="12sp"
                            android:textColor="@color/blue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:id="@+id/txt_order_discounts"
                            android:layout_marginLeft="@dimen/sp_16"
                            android:textSize="12sp"
                            android:textColor="@color/gray_333333"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_logistics"
                    android:layout_marginTop="40dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:text="物流信息"
                        android:textSize="14sp"
                        android:layout_marginLeft="34dp"
                        android:layout_marginBottom="15dp"
                        android:textColor="@color/blue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <View style="@style/style_split_line_mg18"/>

                    <LinearLayout
                        android:layout_marginTop="15dp"
                        android:layout_marginLeft="48dp"
                        android:layout_marginRight="48dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:text="物流公司"
                            android:textSize="12sp"
                            android:textColor="@color/blue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:id="@+id/txt_logistics_company"
                            android:layout_marginLeft="@dimen/sp_16"
                            android:textSize="12sp"
                            android:textColor="@color/gray_333333"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginTop="@dimen/dp_20"
                        android:layout_marginLeft="48dp"
                        android:layout_marginRight="48dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:text="发货时间"
                            android:textSize="12sp"
                            android:textColor="@color/blue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:id="@+id/txt_logistics_time"
                            android:layout_marginLeft="@dimen/sp_16"
                            android:textSize="12sp"
                            android:textColor="@color/gray_333333"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginTop="@dimen/dp_20"
                        android:layout_marginLeft="48dp"
                        android:layout_marginRight="48dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:text="快递单号"
                            android:textSize="12sp"
                            android:textColor="@color/blue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:id="@+id/txt_logistics_id"
                            android:layout_marginLeft="@dimen/sp_16"
                            android:textSize="12sp"
                            android:textColor="@color/gray_333333"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="40dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:text="客户信息"
                        android:textSize="14sp"
                        android:layout_marginLeft="34dp"
                        android:layout_marginBottom="15dp"
                        android:textColor="@color/blue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <View style="@style/style_split_line_mg18"/>

                    <LinearLayout
                        android:layout_marginTop="15dp"
                        android:layout_marginLeft="48dp"
                        android:layout_marginRight="48dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:text="客户姓名"
                            android:textSize="12sp"
                            android:textColor="@color/blue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:id="@+id/txt_man_name"
                            android:layout_marginLeft="@dimen/sp_16"
                            android:textSize="12sp"
                            android:textColor="@color/gray_333333"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginTop="@dimen/dp_20"
                        android:layout_marginLeft="48dp"
                        android:layout_marginRight="48dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:text="联系电话"
                            android:textSize="12sp"
                            android:textColor="@color/blue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:id="@+id/txt_man_phone"
                            android:layout_marginLeft="@dimen/sp_16"
                            android:textSize="12sp"
                            android:textColor="@color/gray_333333"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginTop="@dimen/dp_20"
                        android:layout_marginLeft="48dp"
                        android:layout_marginRight="48dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:text="量体地址"
                            android:textSize="12sp"
                            android:textColor="@color/blue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:id="@+id/txt_man_address"
                            android:layout_marginLeft="@dimen/sp_16"
                            android:textSize="12sp"
                            android:textColor="@color/gray_333333"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginTop="@dimen/dp_20"
                        android:layout_marginLeft="48dp"
                        android:layout_marginRight="48dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:text="\u3000\u3000身高"
                            android:textSize="12sp"
                            android:textColor="@color/blue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:id="@+id/txt_man_height"
                            android:layout_marginLeft="@dimen/sp_16"
                            android:textSize="12sp"
                            android:textColor="@color/gray_333333"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginTop="@dimen/dp_20"
                        android:layout_marginLeft="48dp"
                        android:layout_marginRight="48dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:text="\u3000\u3000体重"
                            android:textSize="12sp"
                            android:textColor="@color/blue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:id="@+id/txt_man_weight"
                            android:layout_marginLeft="@dimen/sp_16"
                            android:textSize="12sp"
                            android:textColor="@color/gray_333333"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_measure"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <fragment
                    android:id="@+id/fragment_measure"
                    android:name="com.cdkj.hydz.module.order.OrderMeasureFragment"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    >
                </fragment>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_body"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <fragment
                    android:id="@+id/fragment_body"
                    android:name="com.cdkj.hydz.module.order.OrderBodyFragment"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    >
                </fragment>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_craft"
                android:layout_marginBottom="18dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <fragment
                    android:id="@+id/fragment_craft"
                    android:name="com.cdkj.hydz.module.order.OrderCraftFragment"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    >
                </fragment>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_address"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_marginTop="22dp"
                    android:layout_marginLeft="34dp"
                    android:layout_marginRight="34dp"
                    android:layout_marginBottom="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:text="邮寄地址"
                        android:textSize="14sp"
                        android:textColor="@color/blue"
                        android:layout_width="60dp"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/txt_address"
                        android:layout_marginLeft="19dp"
                        android:textSize="12sp"
                        android:textColor="@color/gray_333333"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <View style="@style/style_split_line_mg18"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_remark"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_marginTop="22dp"
                    android:layout_marginLeft="34dp"
                    android:layout_marginRight="34dp"
                    android:layout_marginBottom="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:text="备注"
                        android:textSize="14sp"
                        android:textColor="@color/blue"
                        android:layout_width="60dp"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/txt_remark"
                        android:layout_marginLeft="19dp"
                        android:textSize="12sp"
                        android:textColor="@color/gray_333333"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <View style="@style/style_split_line_mg18"/>

            </LinearLayout>

            <Button
                android:id="@+id/btn_data_confirm"
                android:layout_marginTop="22dp"
                android:layout_marginLeft="18dp"
                android:layout_marginRight="18dp"
                android:layout_marginBottom="12dp"
                android:gravity="center"
                android:background="@drawable/corner_order_blue"
                android:text="保存数据"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:layout_width="match_parent"
                android:layout_height="44dp" />

            <Button
                android:id="@+id/btn_order_confirm"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="18dp"
                android:layout_marginRight="18dp"
                android:layout_marginBottom="12dp"
                android:gravity="center"
                android:background="@drawable/corner_order_blue"
                android:text="提交复核"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:layout_width="match_parent"
                android:layout_height="44dp" />

        </LinearLayout>

    </ScrollView>
</layout>
