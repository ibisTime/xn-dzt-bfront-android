<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

       <View
           android:background="@color/gray_cccccc"
           android:layout_width="match_parent"
           android:layout_height="1dp"/>

        <RelativeLayout
            android:id="@+id/layout_photo"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="头像"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:layout_marginTop="42dp"
                android:layout_marginLeft="28dp"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/img1"
                android:layout_marginTop="42dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="29dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/more_right" />

            <ImageView
                android:id="@+id/img_photo"
                android:src="@mipmap/photo_default"
                android:layout_toLeftOf="@id/img1"
                android:layout_marginRight="12dp"
                android:layout_marginBottom="6dp"
                android:layout_marginTop="26dp"
                android:layout_width="50dp"
                android:layout_height="50dp" />

        </RelativeLayout>

        <View style="@style/style_split_line_mg18" />

        <LinearLayout
            android:id="@+id/layout_nick"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:orientation="horizontal"
            android:paddingLeft="28dp"
            android:paddingRight="29dp"
            >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="昵称"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/txt_nick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingRight="12dp"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/more_right" />

        </LinearLayout>

        <View style="@style/style_split_line_mg18" />

        <LinearLayout
            android:id="@+id/layout_phone"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:orientation="horizontal"
            android:paddingLeft="28dp"
            android:paddingRight="29dp"
            >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="登录手机号"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/txt_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingRight="12dp"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/more_right" />

        </LinearLayout>

        <View style="@style/style_split_line_mg18" />

        <LinearLayout
            android:id="@+id/layout_password"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:orientation="horizontal"
            android:paddingLeft="28dp"
            android:paddingRight="29dp"
            >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="登录密码"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/more_right" />

        </LinearLayout>

        <View style="@style/style_split_line_mg18" />

        <LinearLayout
            android:id="@+id/layout_pay_pwd"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:orientation="horizontal"
            android:paddingLeft="28dp"
            android:paddingRight="29dp"
            >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="支付密码"
                android:textColor="@color/black"
                android:textSize="14sp" />


            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/more_right" />

        </LinearLayout>

        <View style="@style/style_split_line_mg18" />

        <LinearLayout
            android:id="@+id/layout_card"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:orientation="horizontal"
            android:paddingLeft="28dp"
            android:paddingRight="29dp"
            >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="绑定银行卡"
                android:textColor="@color/black"
                android:textSize="14sp" />


            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/more_right" />

        </LinearLayout>

        <View style="@style/style_split_line_mg18" />

        <View
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp"/>

        <Button
            android:id="@+id/btn_logout"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="18dp"
            android:layout_marginBottom="12dp"
            android:gravity="center"
            android:background="@drawable/corner_logout"
            android:text="退出登录"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:layout_width="match_parent"
            android:layout_height="44dp" />

    </LinearLayout>
</layout>
