<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:background="#f0f0f0"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.cdkj.hydz.module.user.account.AuthenticateActivity">

        <View
            android:background="@color/lineColor"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:background="@color/white"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <TextView
                android:gravity="center_vertical"
                android:paddingLeft="15dp"
                android:text="真实姓名"
                android:textSize="15sp"
                android:textColor="@color/fontColor_gray"
                android:layout_width="127dp"
                android:layout_height="match_parent" />

            <EditText
                android:id="@+id/edt_name"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:textSize="14sp"
                android:inputType="text"
                android:background="@null"
                android:textColor="#333333"
                android:textColorHint="@color/fontColor_hint"
                android:hint="请输入姓名"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <View
            android:background="#F0F0F0"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

        <LinearLayout
            android:background="@color/white"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <TextView
                android:gravity="center_vertical"
                android:paddingLeft="15dp"
                android:text="身份证号"
                android:textSize="15sp"
                android:textColor="@color/fontColor_gray"
                android:layout_width="127dp"
                android:layout_height="match_parent" />

            <EditText
                android:id="@+id/edt_identity"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:textSize="14sp"
                android:textColor="#333333"
                android:background="@null"
                android:maxLines="18"
                android:textColorHint="@color/fontColor_hint"
                android:hint="请输入身份证号"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <Button
            android:id="@+id/btn_confirm"
            android:textColor="@color/white"
            android:text="确定"
            android:textSize="18sp"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/corner_order_blue"
            android:layout_width="match_parent"
            android:layout_height="45dp" />

    </LinearLayout>
</layout>
